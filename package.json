{
  "name": "react-gantt-nl",
  "version": "0.1.0",
  "description": "A lightweight, zero-dependency React Gantt chart with native baseline support",
  "main": "dist/index.js",
  "module": "dist/index.mjs",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.js"
    }
  },
  "files": [
    "dist",
    "LICENSE",
    "README.md",
    "CHANGELOG.md"
  ],
  "scripts": {
    "build": "tsup src/index.ts --format cjs,esm --dts --external react",
    "dev": "tsup src/index.ts --format cjs,esm --dts --external react --watch",
    "lint": "eslint src/",
    "typecheck": "tsc --noEmit",
    "demo": "npm run build && cd demo && npm install && npm run dev",
    "demo:dev": "cd demo && npm run dev"
  },
  "peerDependencies": {
    "react": ">=17.0.0",
    "react-dom": ">=17.0.0"
  },
  "devDependencies": {
    "@types/react": "^18.2.0",
    "@types/react-dom": "^18.2.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "tsup": "^8.0.0",
    "typescript": "^5.0.0"
  },
  "keywords": [
    "react",
    "gantt",
    "chart",
    "timeline",
    "project-management",
    "baseline",
    "scheduling",
    "tasks"
  ],
  "author": "Saharos",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/yi00it/react-gantt-nl.git"
  },
  "bugs": {
    "url": "https://github.com/yi00it/react-gantt-nl/issues"
  },
  "homepage": "https://github.com/yi00it/react-gantt-nl#readme"
}
